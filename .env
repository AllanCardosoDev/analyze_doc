# Chaves de API para provedores de IA
GROQ_API_KEY=sua_chave_groq_aqui
OPENAI_API_KEY=sua_chave_openai_aqui
ANTHROPIC_API_KEY=sua_chave_anthropic_aqui

# Configurações do servidor (opcional)
PORT=8501
ENABLE_CACHE=true
DEBUG_MODE=false

# Configurações de proxy
YOUTUBE_PROXY=  # Formato: http://usuario:senha@host:porta

# Configurações de OCR (opcional)
TESSERACT_PATH=  # Caminho personalizado para o executável do Tesseract OCR
OCR_LANGUAGES=por,eng  # Idiomas padrão para OCR

# Configurações de segurança
ENCRYPTION_KEY=  # Chave para criptografia de documentos (gerada automaticamente se vazia)
SESSION_SECRET=  # Segredo para sessões (gerado automaticamente se vazio)
DATA_RETENTION=30  # Dias para reter documentos (padrão: 30 dias)

# Configurações de armazenamento
STORAGE_TYPE=local  # local, s3, gcs, etc.
STORAGE_PATH=./data  # Diretório para armazenamento local
# S3_BUCKET=
# S3_REGION=
# GCS_BUCKET=

# Configurações de notificação
ENABLE_EMAIL=false
# EMAIL_HOST=
# EMAIL_PORT=
# EMAIL_USER=
# EMAIL_PASSWORD=
# EMAIL_FROM=

# Configurações de colaboração
MAX_SHARE_USERS=10  # Número máximo de usuários para compartilhamento
